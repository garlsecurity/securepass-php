{
  "name": "Securepass",
  "baseUrl": "https://beta.secure-pass.net",
  "version": "v1-beta",
  "description": "Securepass API",
  "operations": {
      "Ping": {
          "httpMethod": "GET",
          "uri": "/api/v1/ping",
          "summary": "Ping SecurePass service",
          "responseClass": "PingOutput"
      },
      "UserAuth": {
          "httpMethod": "POST",
          "uri": "/api/v1/users/auth",
          "summary": "Autenticate user",
          "responseClass": "UserAuthOutput",
          "parameters": {
              "username": {
                  "type": "string",
                  "location": "postField",
                  "description": "Username",
                  "required": true,
                  "sentAs": "USERNAME"
              },
              "secret": {
                  "type": "string",
                  "location": "postField",
                  "description": "Password",
                  "required": true,
                  "sentAs": "SECRET"
              }
          }
      },
      "UserAdd": {
        "httpMethod": "GET",
        "uri": "/api/v1/users/add",
        "summary": "Add a user to the realm",
        "responseClass": "UserAddOutput",
        "parameters": {

        }

      },
      "UserDelete": {

      },
      "UsersList": {

      },
      "UserProvision": {

      },
      "UserInfo": {
          "httpMethod": "POST",
          "uri": "/api/v1/users/info",
          "summary": "Get user information",
          "responseClass": "UserInfoOutput",
          "parameters": {
              "username": {
                  "type": "string",
                  "location": "postField",
                  "description": "User information to retrieve by username",
                  "required": true,
                  "sentAs": "USERNAME"
              }
          }
      }
  },
  "models": {
    "PingOutput": {
      "type": "object",
      "properties": {
        "ip": {
          "location": "json",
          "type": "string"
        },
        "ip_version": {
          "location": "json",
          "type": "string"
        }
      }
    },
    "UserInfoOutput": {
      "type": "object",
      "properties": {
        "name": {
          "location": "json",
          "type": "string"
        }
      }
    },
    "UserAuthOutput": {
      "type": "object",
      "properties": {
         "authenticated": {
           "location": "json",
           "type": "boolean"
         }
      }
    }
  }
}


